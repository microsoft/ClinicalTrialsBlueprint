{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "matchingBotName": {
      "type": "string",
      "defaultValue": "ctm-healthbot-template",
      "minLength": 3,
      "maxLength": 25
    },
    "healthInsightName": {
      "type": "string",
      "defaultValue": "healthinsights-cog",
      "minLength": 3,
      "maxLength": 25
    },
    "resourceTags": {
      "type": "object",
      "defaultValue": {
        "Environment": "Prod",
        "Project": "AHI Trial Matching bot"
      }
    }
  },
  "variables": {
    // Addresses
    // "redisAddress": "[concat(variables('botName'),'.redis.cache.windows.net')]"
  },
  "resources": [
    {
      "type": "Microsoft.HealthBot/healthBots",
      "apiVersion": "2022-08-08",
      "name": "[parameters('matchingBotName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "F0"
      },
      "properties": {},
      "tags": "[parameters('resourceTags')]"
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2022-12-01",
      "name": "[parameters('healthInsightName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "F0"
      },
      "kind": "HealthInsights",
      "properties": {
        "customSubDomainName": "[parameters('healthInsightName')]",
        "publicNetworkAccess": "Enabled"
      },
      "tags": "[parameters('resourceTags')]",
      "dependsOn": [
        "[resourceId('Microsoft.HealthBot/healthBots', parameters('matchingBotName'))]"
      ]
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "runPowerShellInline",
      "tags": "[parameters('resourceTags')]",
      "kind": "AzurePowerShell",
      "location": "[resourceGroup().location]",
      // "identity": {
      //   "type": "userAssigned",
      //   "userAssignedIdentities": {
      //     "/subscriptions/01234567-89AB-CDEF-0123-456789ABCDEF/resourceGroups/myResourceGroup/providers/Microsoft.ManagedIdentity/userAssignedIdentities/myID": {}
      //   }
      // },
      "properties": {
        "forceUpdateTag": "1",
        "containerSettings": {
          "containerGroupName": "healthbot-deploy-script"
        },
        "storageAccountSettings": {
          "storageAccountName": "healthbot-deploy-storage",
          "storageAccountKey": "healthbot-deploy-storage-key"
        },
        "azPowerShellVersion": "9.7",
        "arguments": "[concat('-secret ',
          listSecrets(resourceId('Microsoft.HealthBot/healthBots',
          parameters('matchingBotName')), '2022-08-08').secrets[0].value,
          ' -baseUrl ',
          reference(resourceId('Microsoft.HealthBot/healthBots',
          parameters('matchingBotName')),
          '2022-08-08').properties.endpoint,
          ' -hbsRestoreFile ./bot-templates/ctm-bot.json')]",
        "environmentVariables": [
          {
            "name": "UserName",
            "value": "jdole"
          },
          {
            "name": "Password",
            "secureValue": "jDolePassword"
          }
        ],
        // "scriptContent": "
        //     param([string] $name)
        //     $output = 'Hello {0}. The username is {1}, the password is {2}.' -f $name,${Env:UserName},${Env:Password}
        //     Write-Output $output
        //     $DeploymentScriptOutputs = @{}
        //     $DeploymentScriptOutputs['text'] = $output
        //   ", // or 
        // "primaryScriptUri": "https://raw.githubusercontent.com/Azure/azure-docs-json-samples/master/deployment-script/deploymentscript-helloworld.ps1",
        "primaryScriptUri": "./restoreBot.ps1",
        "supportingScriptUris": [],
        "timeout": "PT30M",
        "cleanupPreference": "OnSuccess",
        "retentionInterval": "P1D",
        "dependsOn": [
          "[resourceId('Microsoft.CognitiveServices/accounts', parameters('healthInsightName'))]",
          "[resourceId('Microsoft.HealthBot/healthBots', parameters('matchingBotName'))]"
        ]
      }
    }
  ],
  "outputs": {
    "healthInsightEndpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', parameters('healthInsightName')), '2022-12-01').endpoint]"
    },
    "healthInsightKey": {
      "type": "securestring",
      "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', parameters('healthInsightName')), '2022-12-01').key1]"
    },
    "healthBotEndpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.HealthBot/healthBots', parameters('matchingBotName')), '2022-08-08').properties.endpoint]"
    },
    "healthBotKey": {
      "type": "securestring",
      "value": "[listSecrets(resourceId('Microsoft.HealthBot/healthBots', parameters('matchingBotName')), '2022-08-08').secrets[0].value]"
    },
  }
}